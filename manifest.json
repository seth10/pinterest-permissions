{
  "manifest_version": 2,
  "name": "ρ³ Pinterest Permissions Proof-of-concept",
  "description":"The Pinterest extension can function without accessing all of your Chrome data - here's how.",
  "version": "0.0.1",

  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
            "128": "icons/icon128.png" },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/icon38.png",
    "default_title": "ρ³",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
